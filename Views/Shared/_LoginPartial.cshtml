@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-light">Logga ut</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
      <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-light text-dark fw-bolder ms-3" asp-area="Identity" asp-page="/Account/Register">Registrera</a>
    </li>
}
</ul>
