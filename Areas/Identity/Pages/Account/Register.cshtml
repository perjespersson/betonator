@page
@model RegisterModel

<div class="container px-5 py-5">
  <div class="row gx-5 justify-content-center">
    <div class="col-lg-11 col-xl-9 col-xxl-8">
      <div class="card overflow-hidden shadow rounded-4 border-0 mb-4">
        <div class="card-body p-5">
          <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div class="text-center mb-4">
              <h3 class="display-6 fw-bolder mb-0"><span class="d-inline">Register</span></h3>
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 text-center text-dark" role="alert">
              <i class="bi bi-exclamation-triangle-fill"></i>
            </div>

            <div class="form-floating mb-3">
              <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
              <label asp-for="Input.Email">Email</label>
              <span asp-validation-for="Input.Email" class="text-danger d-block mt-2 ms-2"></span>
            </div>

            <div class="form-floating mb-3">
              <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
              <label asp-for="Input.Password">Password</label>
              <span asp-validation-for="Input.Password" class="text-danger d-block mt-2 ms-2"></span>
            </div>

            <div class="form-floating mb-3">
              <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
              <label asp-for="Input.ConfirmPassword">Confirm Password</label>
              <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-block mt-2 ms-2"></span>
            </div>

            <div class="d-grid mb-3">
              <button class="btn btn-success btn-lg px-5 py-3 fs-6 fw-bolder" type="submit">
                Register
              </button>
            </div>
          </form>

          <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="d-grid mb-4">
              <button class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" name="provider" value="Google" type="submit">
                <i class="bi bi-google"></i> Register with Google
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
