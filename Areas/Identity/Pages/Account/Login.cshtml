@page
@model LoginModel

<section class="py-5">
  <div class="container px-5">
    <div class="row gx-5 justify-content-center">
      <div class="col-lg-11 col-xl-9 col-xxl-8">
        <div class="card overflow-hidden shadow rounded-4 border-0 mb-4">
          <div class="card-body p-5">
            <form id="account" method="post">

              <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-5" role="alert"></div>


              <div class="text-center mb-5">
                <h3 class="display-6 fw-bolder mb-0"><span class="d-inline">Log in</span></h3>
              </div>

              <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger mt-4"></span>
              </div>

              <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>

              <div class="d-grid mb-3">
                <button class="btn btn-success btn-lg px-5 py-3 fs-6 fw-bolder" id="login-submit" type="submit">
                  Log in
                </button>
              </div>

              <div class="d-grid mb-4">
                <button class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" id="submitButton" disabled>
                  <i class="bi bi-google me-2"></i> Log in with Google
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="d-grid">
          <a class="btn btn-link btn-lg px-5 fs-6 fw-bolder text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">
            Forgot password?
          </a>
        </div>

        <div class="d-grid">
          <a class="btn btn-link btn-lg px-5 fs-6 fw-bolder text-decoration-none" id="submitButton" asp-page="./Register">
            Register
          </a>
        </div>

        <div class="d-grid">
          <a class="btn btn-link btn-lg px-5 fs-6 fw-bolder text-decoration-none" id="submitButton" asp-page="./ResendEmailConfirmation">
            Resend email confirmation
          </a>
        </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}